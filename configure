#!/usr/bin/env sh
BUILD_DIR="_build"
BUILD_SHARED="ON"
USE_GPU="ON"
USE_CUDNN="ON"
# @todo would be nice to have command line options to enable the compile options
#       easily but that would require some work on the option parsing
COMMAND="cmake . -B"$BUILD_DIR" -DBUILD_SHARED_LIBS=$BUILD_SHARED -DUSE_GPU=$USE_GPU -DUSE_CUDNN=$USE_CUDNN"
echo "Calling: $COMMAND"
$COMMAND
