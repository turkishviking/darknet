#!/usr/bin/env sh
if ! test "$BUILD_DIR"; then
  echo "You need to set the BUILD_DIR variable to use this script."
  echo
    echo "automatically export build dir to _build"
    BUILD_DIR="_build"
    echo
fi
BUILD_SHARED_LIBS="ON"
BUILD_TESTING="ON"
USE_GPU="ON"
USE_CUDNN="ON"
# @todo would be nice to have command line options to enable the compile options
#       easily but that would require some work on the option parsing
COMMAND="cmake . -B"$BUILD_DIR" -DBUILD_SHARED_LIBS=$BUILD_SHARED_LIBS -DBUILD_TESTING=$BUILD_TESTING -DUSE_GPU=$USE_GPU -DUSE_CUDNN=$USE_CUDNN"
echo "Calling: $COMMAND"
$COMMAND
